	background-color red

// Меню-2

.cont-1
	width: 200px
	height: 200px
	background-color: bg-2
	border-radius: 10px
	margin: 15px
	display: grid
	border: 3px solid bg-1
	grid-template-columns 1fr //repeat(2, 1fr)
	grid-template-rows repeat(3, 1fr)
	.butt-1
		display: table
		margin: 7px
		padding: 5px
		//border: 3px solid bg-3
		background-color: white
		border-radius: 7px
		&:hover
			background-color: bg-yel
		a
			display: table-cell
			text-align: center
			vertical-align: middle
			color: black
			font-size: large
			&:hover
				text-decoration: none
				font-weight: bold


