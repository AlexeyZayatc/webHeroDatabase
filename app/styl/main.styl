.table-2-2
	p input
		height: 25px

details
	margin-left: 50px

.left-edge-1, .right-edge-1
	margin: 0px 10px

.left-edge-2, .right-edge-2, .center-edge-2
	margin: 0px 10px
	display: grid

.left-edge-2
	grid-column 1/2

.center-edge-2
	grid-column 2/3

.right-edge-2
	grid-column 3/4

p.title-1
	font-weight: bold

.title-1-1
	display: grid
	grid-column 1/3
	text-align: center
	font-size: x-large

.title-1-3
	display: grid
	grid-column 1/3
	text-align: center
	font-size: x-large
	height: 50px

.title-1-2
	display: grid
	grid-column 1/4
	text-align: center
	font-size: x-large

.table
	display: grid
	grid-template-columns repeat(2, 1fr)
	grid-template-rows 50px 1fr //repeat(5, 1fr)
	width: 80%
	margin: 20px auto
	padding: 10px
	background-color: bg-2
	border-radius: 10px
	box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.25)
	& > button
		display: grid
		grid-column: 1/3
		width: 45%
		margin: auto
		border: solid black 2px
		border-radius: 5px
		background-color: bg-blue
		&:hover
			background-color: bg-yel
			border: dashed black 2px

.table-2
	display: grid
	grid-template-columns max-content max-content auto //repeat(2, 1fr)
	grid-template-rows 1fr //repeat(5, 1fr)
	width: 80%
	margin: 20px auto
	padding: 10px
	background-color: bg-2
	border-radius: 10px
	box-shadow: 0px 5px 10px 0px rgba(0, 0, 0, 0.25)
	& > button
		display: grid
		grid-column: 1/4
		width: 45%
		margin: auto
		border: solid black 2px
		border-radius: 5px
		background-color: bg-blue
		&:hover
			background-color: bg-yel
			border: dashed black 2px

.table > p, .table > input
	display block

.right-edge-1
	display: grid
	grid-column: 2/3

